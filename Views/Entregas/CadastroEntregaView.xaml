<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Entrega.Views.Entregas.CadastroEntregaView"
             Title="CadastroEntregaView">

    <ScrollView>
        <VerticalStackLayout Spacing="3" Padding="15">
            <Label Text="Id" FontSize="Medium" />
            <Entry Text="{Binding Id}" FontSize="Medium" IsEnabled="false" />

            <Label Text="Nome do Remetente" FontSize="Medium" />
            <Entry Text="{Binding Remetente}" FontSize="Medium" />
     
            <Label Text="Id do Morador" FontSize="Medium" />
            <Entry Text="{Binding IdMorador}" FontSize="Medium" />
            
            <HorizontalStackLayout Spacing="20">
                <Button Text="Salvar" Command="{Binding SalvarCommand}"></Button>
                <Button Text="Cancelar" Command="{Binding CancelarCommand}"></Button>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>      